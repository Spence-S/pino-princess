{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2021",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "declaration": true
  },
  "watchOptions": {
    "excludeDirectories": [
      "dist",
      "node_modules"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "lib/**/*",
    "index.ts",
    "cli.ts"
  ]
}
